<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!--item_cardview_layour.xml-->

    <android.support.v7.widget.CardView
        android:id="@+id/cvCartItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/cartProductImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/cartProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/cartProductImage"
                android:layout_toRightOf="@+id/cartProductImage"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cartProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartProductName"
                android:layout_toEndOf="@+id/cartProductImage"
                android:layout_toRightOf="@+id/cartProductImage"
                android:text="No data found"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cartProductqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartProductPrice"
                android:layout_toEndOf="@+id/cartProductImage"
                android:layout_toRightOf="@+id/cartProductImage"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cartTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartProductqty"
                android:layout_toEndOf="@+id/cartProductImage"
                android:layout_toRightOf="@+id/cartProductImage"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>