<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!--item_cardview_layour.xml-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_single_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/product_image"
                android:src="@drawable/blowout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:padding="10dp" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:text="Product name: "
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:text="Description: "
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description"
                android:text="Price: "
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <EditText
                android:id="@+id/product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Quantity"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/product_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_qty"
                android:gravity="left"
                android:text="Total price: "
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/submitProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_total_price"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:text="Add to cart" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
